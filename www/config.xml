<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.philitrainjeary" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Southeastern Pennsylvania Trains Schedule</name>
    <description>
       SEPTA - Southeastern Pennsylvania Transportation Authority - trains schedule
    </description>
    <author email="nasser.jeary@gmail.com" href="http://nasserjeary.com/">
      Nasser Jeary -
 Web/Mobile Applications Developer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true"/>
<icon density="ldpi" src="res/icon/android/xxxhdpi.png"/>
<icon density="mdpi" src="res/icon/android/xxxhdpi.png"/>
<icon density="hdpi" src="res/icon/android/xxxhdpi.png"/>
<icon density="xhdpi" src="res/icon/android/xxxhdpi.png"/>
<icon density="xxhdpi" src="res/icon/android/xxxhdpi.png"/>
<icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
